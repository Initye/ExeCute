{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "types": ["node"],
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "useDefineForClassFields": true,
      "lib": ["ESNext", "DOM"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
  }
  